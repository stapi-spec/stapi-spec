{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "Analytics": {
            "const": "VOLUMETIC",
            "title": "Volume Analytics"
        },
        "OfferingTier": {
            "anyOf": [
                {
                    "const": "STANDARD",
                    "title": "Standard Offering Tier"
                },
                {
                    "const": "PREFERRED",
                    "title": "Preferred Offering Tier"
                },
                {
                    "const": "ELITE",
                    "title": "Elite Offering Tier"
                }
            ],
            "title": "Offering Tier"
        },
        "Withhold": {
            "anyOf": [
                {
                    "const": "None",
                    "title": "Public"
                },
                {
                    "const": "30_DAYS",
                    "title": "Withhold 30 days"
                },
                {
                    "const": "ELITE",
                    "title": "Permanent Withhold"
                }
            ],
            "title": "Days to withhold product"
        },
        "Frequency": {
            "anyOf": [
                {
                    "const": "ONCE",
                    "title": "Once"
                },
                {
                    "const": "DAILY",
                    "title": "Daily"
                },
                {
                    "const": "WEELKY",
                    "title": "Weekly"
                },
                {
                    "const": "BIWEEKLY",
                    "title": "Bi-weekly"
                },
                {
                    "const": "TRIWEEKLY",
                    "title": "Tri-weekly"
                },
                {
                    "const": "MONTHLY",
                    "title": "Monthly"
                },
                {
                    "const": "ALL_INCLUSIVE",
                    "title": "All Opportunities"
                },
                {
                    "const": "USER_DEFINED",
                    "title": "User Defined"
                }
            ],
            "title": "Reoccuring collection configuration",
            "type": "string"
        }
    },
    "properties": {
        "eNiirs": {
            "type": "number",
            "description": "NIIRS Score is a function of the GSD, Signal-to-Noise Ratio (SNR), and Relative Edge Response (RER) of an image. This NIIRS constraint will use a predicted SNR and RER based off an aggregation of previously taken and analyzed images.",
            "minimum": 3,
            "maximum": 5
        },
        "target_azimuth": {
            "description": "Angle between True North, target, and sub-Sun point (clockwise)",
            "minimum": 0,
            "maximum": 360,
            "type": "integer"
        },
        "view:sun_elevation": {
            "type": "integer",
            "description": "Angle between the target ground plane and Sun. Images collected in low-light conditions have quality outside standard specifications.",
            "minimum": 10,
            "maximum": 90
        },
        "view:sun_azimuth": {
            "type": "integer",
            "description": "Angle between True North, target, and sub-satellite point (clockwise, degrees)",
            "minimum": 0,
            "maximum": 360
        },
        "view:off_nadir": {
            "type": "integer",
            "description": "Angle between the sub-satellite point, satellite, and target (degrees)",
            "minimum": 0,
            "maximum": 30
        },
        "view:satellite_elevation": {
            "type": "integer",
            "description": "Angle between the target ground plane and satellite (degrees)",
            "minimum": 60,
            "maximum": 90
        },
        "view:convergenceAngle": {
            "type": "integer",
            "description": "Angle between satellite-to-target vectors at each image time",
            "minimum": 10,
            "maximum": 50
        },
        "eo:cloud_cover": {
            "type": "integer",
            "description": "Maximum allowable cloud cover in percent",
            "minimum": 30,
            "maximum": 100,
            "default": 30
        },
        "frequency:": {
            "oneOf": [
                {
                    "$ref": "#/$defs/Frequency"
                }
            ],
            "default": "ONCE",
            "description": "Reoccuring collections"
        },
        "offering": {
            "oneOf": [
                {
                    "$ref": "#/$defs/OfferingTier"
                }
            ],
            "default": "STANDARD",
            "description": "The priority tier"
        },
        "analytics": {
            "anyOf": [
                {
                    "$ref": "#/$defs/Analytics"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "description": "Detect"
        },
        "deliveryConfigId": {
            "anyOf": [
                {
                    "format": "uuid",
                    "type": "string"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "description": "Location to delivery products upon collection"
        },
        "withhold": {
            "oneOf": [
                {
                    "$ref": "#/$defs/Withhold"
                }
            ],
            "default": "NONE",
            "description": "Number of days to withhold collected product from the public archive catalog"
        }
    }
}